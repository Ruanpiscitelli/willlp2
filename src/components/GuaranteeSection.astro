<style>
  .guarantee {
    padding: var(--spacing-lg) 0;
    background: linear-gradient(rgba(0, 0, 0, 0.92), rgba(0, 0, 0, 0.96)), 
                #000020;
    position: relative;
  }
  
  .guarantee::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 8px;
    background: linear-gradient(90deg, transparent, var(--color-secondary), transparent);
  }
  
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }
  
  .guarantee-main-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-lg);
    flex-wrap: wrap;
    text-align: center;
  }
  
  .lock-icons {
    font-size: 2rem;
    margin: 0 10px;
    animation: pulseGlow 2s infinite;
  }
  
  .guarantee-title {
    font-size: 1.2rem;
    font-weight: 800;
    text-align: center;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.7);
    text-transform: uppercase;
    margin: 10px 0;
    line-height: 1.3;
    padding: 0 var(--spacing-sm);
  }
  
  .guarantees-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin: 0 var(--spacing-sm) 30px;
  }
  
  .guarantee-item {
    background: rgba(0, 0, 0, 0.85);
    border: 2px solid #444;
    border-radius: 12px;
    padding: 20px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 
                inset 0 0 30px rgba(0, 195, 29, 0.1);
  }
  
  .guarantee-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
    background: var(--color-secondary);
  }
  
  .guarantee-content {
    color: #ffffff;
    font-size: 1rem;
    line-height: 1.6;
    margin-top: 15px;
  }
  
  .guarantee-content p {
    margin-bottom: 15px;
  }
  
  .highlight {
    color: #00ff26;
    font-weight: 800;
    text-shadow: 0 0 8px rgba(0, 195, 29, 0.7);
  }
  
  .bonus-list {
    list-style: none;
    margin: 15px 0;
  }
  
  .bonus-list li {
    margin-bottom: 20px;
    display: flex;
    align-items: flex-start;
  }
  
  .check-icon {
    margin-right: 12px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 195, 29, 0.2);
    border-radius: 50%;
    width: 32px;
    height: 32px;
    box-shadow: 0 0 10px rgba(0, 195, 29, 0.4);
  }
  
  .bonus-item {
    display: flex;
    flex-direction: column;
  }
  
  .bonus-name {
    font-weight: 700;
    color: white;
    font-size: 1.05rem;
  }
  
  .bonus-value {
    font-style: italic;
    color: #dddddd;
    font-weight: 500;
    margin-top: 4px;
  }
  
  .guarantee-summary {
    text-align: center;
    font-size: 1.2rem;
    margin: 30px auto;
    padding: 20px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border: 2px solid #444;
    color: #ffffff;
  }
  
  .btn-guarantee {
    display: block;
    background-color: #00c31d;
    color: white;
    font-size: 0.9rem;
    font-weight: 700;
    text-align: center;
    padding: 14px 16px;
    border-radius: 8px;
    margin: 30px auto 0;
    box-shadow: 0 6px 0 #008213, 
                0 10px 20px rgba(0, 0, 0, 0.4);
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-transform: uppercase;
    animation: pulse 2s infinite;
    max-width: 100%;
  }
  
  .btn-guarantee:hover {
    transform: translateY(-3px);
    box-shadow: 0 9px 0 #008213, 
                0 15px 25px rgba(0, 0, 0, 0.5);
  }
  
  .btn-guarantee:active {
    transform: translateY(3px);
    box-shadow: 0 3px 0 #008213, 
                0 5px 10px rgba(0, 0, 0, 0.3);
  }
  
  .btn-text {
    display: inline-block;
    position: relative;
  }
  
  @keyframes pulseGlow {
    0% { text-shadow: 0 0 5px gold, 0 0 10px gold; transform: scale(1); }
    50% { text-shadow: 0 0 20px gold, 0 0 30px gold; transform: scale(1.1); }
    100% { text-shadow: 0 0 5px gold, 0 0 10px gold; transform: scale(1); }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.03); }
    100% { transform: scale(1); }
  }
  
  @media (min-width: 768px) {
    .container {
      padding: 0 var(--spacing-lg);
    }
    
    .guarantee-title {
      font-size: 1.5rem;
      padding: 0;
    }
    
    .guarantees-container {
      margin: 0 0 30px;
    }
    
    .guarantee-content {
      font-size: 1.1rem;
    }
    
    .btn-guarantee {
      font-size: 1.2rem;
      max-width: 650px;
      padding: 20px 30px;
    }
    
    .btn-text:before {
      content: '[‚Üí ';
    }
    
    .btn-text:after {
      content: ' ‚Üê]';
    }
  }
  
  @media (min-width: 992px) {
    .guarantees-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<style is:global>
  /* Styles for the React component */
  .guarantee-header-container {
    position: relative;
    border-bottom: 1px solid rgba(0, 255, 0, 0.3);
    padding-bottom: 15px;
    margin-bottom: 15px;
  }
  
  .guarantee-number-badge {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }
  
  .guarantee-number {
    display: flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid rgba(0, 255, 0, 0.4);
    border-radius: 6px;
    padding: 6px 10px;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.15);
  }
  
  .number-label {
    font-weight: 800;
    color: #00ff00;
    font-size: 0.85rem;
    text-transform: uppercase;
    margin-right: 8px;
  }
  
  .stock-chart {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 25px;
  }
  
  .chart-bar {
    width: 4px;
    background: linear-gradient(to top, #00ff00, #008800);
    border-radius: 1px;
    animation: chartGrow 3s infinite;
  }
  
  @keyframes chartGrow {
    0% { height: 5px; }
    50% { height: var(--height, 20px); }
    100% { height: 5px; }
  }
  
  .guarantee-badge {
    background: linear-gradient(135deg, #00c31d, #007511);
    color: white;
    font-weight: 800;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 0.9rem;
    text-transform: uppercase;
    position: relative;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    gap: 5px;
  }
  
  .profit-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: arrowBounce 2s infinite;
  }
  
  @keyframes arrowBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }
  
  .guarantee-title {
    color: white;
    font-size: 1.4rem;
    font-weight: 800;
    text-transform: uppercase;
    margin: 0 0 15px 0;
    line-height: 1.3;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }
  
  .ticker-tape {
    position: relative;
    width: 100%;
    height: 22px;
    background: rgba(0, 0, 0, 0.8);
    border-radius: 3px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .ticker-content {
    display: flex;
    animation: ticker 20s linear infinite;
    white-space: nowrap;
  }
  
  .ticker-item {
    padding: 0 15px;
    display: flex;
    align-items: center;
    font-family: monospace;
    font-size: 0.8rem;
    font-weight: 700;
  }
  
  .ticker-item.profit {
    color: #00c31d;
  }
  
  .ticker-item.loss {
    color: #ff3a3a;
  }
  
  .ticker-item .value {
    margin-left: 5px;
  }
  
  @keyframes ticker {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }
</style>
